/**index.wxss**/

.contatin{
  padding: 0 22px;
}
.contain-picture .desc{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.contain-picture image{
  width: 100%;
}
.contain-picture swiper{
  height: 200px
}
.scan{
  display: flex;
padding: 0 20px;
align-items: center;
border: 1px solid #eeeef0;
border-radius: 20px;
position: absolute;
top: 159px;
background-color: white;
z-index: 99;
}
.scan .scan_text{
  display: flex;
flex-direction: column;
justify-items: center;
}
.scan .text{
  font-size: 40px;
margin-bottom: 10px;
}
.shop-box{
  width: 100%;
height: 200px;
border-top: 3px solid #eeeef0;
z-index: 10;
border-radius: 15%;
transform: rotate(180deg);
position: absolute;
top: 93px;
box-shadow: 0px -3px;
}
.shop-inform{
margin-top: 100px;
display: flex;
border: 1px solid #eeeef0;
padding: 13px;
align-items: flex-end;
}
.message{
  display: flex;
flex-direction: column;
}
